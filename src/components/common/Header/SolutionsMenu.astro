---
import MenuContainer from "../MenuContainer.astro";
import BlogCardContainer from "../BlogCardContainer.astro";
import CardMenu from "../CardMenu.astro";
import {
  HEADER_SOLUTIONS_CARD,
  getBlogContentList,
  categoryMap,
  SOLUTIONS_CARD_LIST,
} from "../../../constant";

const { blogDescrip, blogImgs, posts } =
  ((await getBlogContentList(HEADER_SOLUTIONS_CARD)) as any) || {};
---

<MenuContainer>
  <CardMenu cardData={SOLUTIONS_CARD_LIST} slot="left" />
  <BlogCardContainer
    blogData={{ categoryMap, blogDescrip, blogImgs, posts }}
    slot="right"
  />
</MenuContainer>
